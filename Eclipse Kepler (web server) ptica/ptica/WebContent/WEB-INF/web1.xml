<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ptica</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/greska/rukovanje_greska.jsp</location>
    </error-page>
  
    <servlet>
        <servlet-name>PrijavaServlet</servlet-name>
        <servlet-class>prijava.PrijavaServl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Zaposleni</servlet-name>
        <servlet-class>prijava.Zaposleni</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OdjavaServlet</servlet-name>
        <servlet-class>odjava.OdjavaServl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoviNalogServl</servlet-name>
        <servlet-class>prijava.NoviNalogServl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NoviNalog</servlet-name>
        <servlet-class>prijava.NoviNalog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DodajServlet</servlet-name>
        <servlet-class>dodaj.DodajServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsletterServl</servlet-name>
        <servlet-class>newsletter.NewsletterServl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrikaziKnjigu</servlet-name>
        <servlet-class>razno.PrikaziKnjigu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrijavaServlet</servlet-name>
        <url-pattern>/PrijavaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Zaposleni</servlet-name>
        <url-pattern>/zaposleni</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoviNalogServl</servlet-name>
        <url-pattern>/NoviNalogServl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NoviNalog</servlet-name>
        <url-pattern>/NoviNalog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DodajServlet</servlet-name>
        <url-pattern>/DodajServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsletterServl</servlet-name>
        <url-pattern>/NewsletterServl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrikaziKnjigu</servlet-name>
        <url-pattern>/PrikaziKnjigu</url-pattern>
    </servlet-mapping>
   
</web-app>